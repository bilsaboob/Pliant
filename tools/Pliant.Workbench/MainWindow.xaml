<Window x:Class="Pliant.Workbench.MainWindow"
		x:Name="root"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Pliant.Workbench"
        xmlns:css="clr-namespace:XamlCSS;assembly=XamlCSS"
		xmlns:sys="clr-namespace:System;assembly=mscorlib"
		xmlns:controls="clr-namespace:Pliant.Workbench.Ui.Controls"
		xmlns:mainMenu="clr-namespace:Pliant.Workbench.Ui.Components.MainMenu"
		xmlns:wpf="clr-namespace:XamlCSS.WPF;assembly=XamlCSS.WPF"
		mc:Ignorable="d"
        wpf:Css.Class="main"
        Title="Grammar Workbench" Height="350" Width="525"
        >
    <Grid x:Name="appContainer" wpf:Css.Class="appContainer">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"></ColumnDefinition>
            <ColumnDefinition Width="Auto"></ColumnDefinition>
            <ColumnDefinition ></ColumnDefinition>
        </Grid.ColumnDefinitions>
        
        <mainMenu:MainMenuComponent x:Name="mainMenu" Grid.Column="0"></mainMenu:MainMenuComponent>

        <GridSplitter x:Name="mainMenuSplitter" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Stretch"></GridSplitter>

        <controls:GrammarEditor x:Name="grammarEditor" Grid.Column="2"></controls:GrammarEditor>
    </Grid>
</Window>
