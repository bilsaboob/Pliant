<Window x:Class="Pliant.Workbench.MainWindow"
		x:Name="root"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Pliant.Workbench"
        xmlns:css="clr-namespace:XamlCSS;assembly=XamlCSS"
		xmlns:cssWPF="clr-namespace:XamlCSS.WPF;assembly=XamlCSS.WPF"
		xmlns:sys="clr-namespace:System;assembly=mscorlib"
		xmlns:controls="clr-namespace:Pliant.Workbench.Ui.Controls"
		mc:Ignorable="d"
        cssWPF:Css.Class="main light"
        Title="MainWindow" Height="350" Width="525"
        cssWPF:Css.StyleSheet="{DynamicResource InternalStyle}">

    <Grid x:Name="appContainer">
        <controls:GrammarEditor x:Name="grammarEditor"></controls:GrammarEditor>
    </Grid>
</Window>
