<UserControl x:Class="Pliant.Workbench.Ui.Components.MainMenu.MenuContent.ExplorerMenuConent"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:wpf="clr-namespace:RapidCSS.WPF;assembly=RapidCSS"
             xmlns:fileTreeView="clr-namespace:Pliant.Workbench.Ui.Controls.FileTreeView"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300"
             wpf:Css.Class="menuContent explorerMenuContent"
             Background="{StaticResource MenuContentBackColor}"
             >
    <Grid wpf:Css.Class="inner">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Grid 
            wpf:Css.Class="header" Grid.Row="0"
            Margin="0,0,0,10"
            >
            <TextBlock 
                wpf:Css.Class="headerText"
                Foreground="{StaticResource MenuContentHeaderTextColor}"
                FontWeight="Bold"
                >
                FILE EXPLORER
            </TextBlock>
        </Grid>
        <fileTreeView:FileTreeView x:Name="fileTreeView" ShowRoot="False" Grid.Row="1" ></fileTreeView:FileTreeView>
    </Grid>
</UserControl>
