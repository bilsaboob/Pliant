<UserControl x:Class="Pliant.Workbench.Ui.Components.MainMenu.MenuContent.MainMenuContent"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:wpf="clr-namespace:RapidCSS.WPF;assembly=RapidCSS"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300"
             wpf:Css.Class="menuContent mainMenuContent"
             Background="{StaticResource MenuContentBackColor}"
>
    <Grid wpf:Css.Class="inner">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid 
            Grid.Row="0" wpf:Css.Class="header"
            Margin="0,0,0,10"
            >
            <TextBlock 
                wpf:Css.Class="headerText"
                Foreground="{StaticResource MenuContentHeaderTextColor}"
                FontWeight="Bold"
                >
                MAIN MENU
            </TextBlock>
        </Grid>
        <IconButton wpf:Css.Class="menuItem" Grid.Row="1" MaterialIcon="OpenInApp" Text="Open folder..." Click="OpenFolderMenuItem_OnClick"></IconButton>
        <IconButton wpf:Css.Class="menuItem" Grid.Row="3" MaterialIcon="ExitToApp" Text="Exit" Click="ExitMenuItem_OnClick"></IconButton>
    </Grid>
</UserControl>