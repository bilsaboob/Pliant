<UserControl x:Class="Pliant.Workbench.Ui.Controls.GrammarEditor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:avalonEdit="http://icsharpcode.net/sharpdevelop/avalonedit"
             xmlns:wpf="clr-namespace:RapidCSS.WPF;assembly=RapidCSS"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300"
             wpf:Css.Class="grammarEditor">
    <Grid>
        <avalonEdit:TextEditor 
            wpf:Css.Class="textEditor"
            Name="grammarTextEditor"
            HorizontalScrollBarVisibility="Hidden"
            WordWrap="False"
            DocumentChanged="GrammarTextEditor_OnDocumentChanged"
        >
        </avalonEdit:TextEditor>
    </Grid>
</UserControl>
