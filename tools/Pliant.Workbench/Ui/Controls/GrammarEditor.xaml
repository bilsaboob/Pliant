<UserControl x:Class="Pliant.Workbench.Ui.Controls.GrammarEditor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:avalonEdit="http://icsharpcode.net/sharpdevelop/avalonedit"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid Name="grammarEditorContainer">
        <avalonEdit:TextEditor 
            Name="grammarTextEditor"
            FontFamily="Consolas"
            FontSize="15"
            ShowLineNumbers="True"
            LineNumbersForeground="{StaticResource EditorLineNumberColor}"
            Foreground="{StaticResource EditorFontColor}"
            Background="{StaticResource EditorBackColor}"
            HorizontalScrollBarVisibility="Auto"
            VerticalScrollBarVisibility="Auto"
            Style="{StaticResource EditorStyle}"
            DocumentChanged="GrammarTextEditor_OnDocumentChanged"
        >
        </avalonEdit:TextEditor>
    </Grid>
</UserControl>
